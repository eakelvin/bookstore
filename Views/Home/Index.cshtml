@{
    ViewData["Title"] = "Home Page";
}

<div class="hero section">
    <img src="Images/book.jpg" alt="" data-aos="fade-in">

    <div class="container">
        <div class="row">
            <div class="col-lg-10 text-center mx-auto">
                <h2 data-aos="fade-up" data-aos-delay="100">Welcome to BookStore</h2>
                <p data-aos="fade-up" data-aos-delay="200">Want to add your favourite Book and Author? We got you
                    covered!</p>
            </div>
            <div class="mt-3 col-lg-5 mx-auto">
                <a class="btn btn-primary btn-lg active" role="button" asp-area="" asp-controller="Authors"
                    asp-action="List">
                    Browse Authors
                </a>
                <a asp-area="" asp-controller="Books" asp-action="Add" class="btn btn-success btn-lg active"
                    role="button" aria-pressed="true">
                    Publish Books
                </a>
            </div>
        </div>
    </div>
</div>
