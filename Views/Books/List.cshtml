@{
    ViewData["Title"] = "Books Page";
}

@model IEnumerable<system.Models.Book>

<div class="bg-secondary text-white text-center p-5">
    <h1 class="display-4">BOOK SECTION</h1>
</div>

<div class="mt-3">
    <a asp-area="" asp-controller="Books" asp-action="Add" class="btn btn-primary btn-lg active" role="button"
        aria-pressed="true">
        Add a Book
    </a>
</div>

<div class="mt-3 border p-5">
    <div class="row">
        <div class="col-md-8 form-inline mb-4">
            <form class="d-flex" method="get">
                <input name="searchString" type="text" class="form-control" placeholder="Search Book" />
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
        <div class="col-md-4">
            <a asp-action="List" class="text-dark">Back to Full List</a>
        </div>
    </div>

    <div>
        <h1 class="display-4">List of Books</h1>
        <table class="table">
            <thead>
                <tr>
                    @* <th>Book Id</th> *@
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Price</th>
                    <th>Author</th>
                    <th>Borrowing Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                        <tr>
                        @* <td>@book.BookId</td> *@
                            <td>@book.Title</td>
                            <td>@book.ISBN</td>
                            <td>@book.Price</td>
                            <td>@book.Author?.Name</td>
                            <td>@book.BorrowingDate.ToString("yyyy-mm-dd")</td>
                            <td class="">
                                <a asp-action="Edit" asp-route-id="@book.BookId">Edit</a>
                                <a asp-action="Delete" asp-route-id="@book.BookId">Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
